<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <!-- Font -- >

  <!-- Style -->
    <link href="/stylesheets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
</head>

<body>
<% include header.ejs %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Vesti</h1>
    <p class="lead">Zanimljive i korisne informacije i sveta veganizma</p>
</div>

<div class="container-fluid">

        <% if (data) { %>
    <% data.forEach(function(vesti){ %>
    <div>
        <div class="news-card">
            <img class="card-img-top card-fill" src="<%= vesti.img %>" alt="Card image">
        </div>
    <div class="news-card text-left">
        <div class="card-body">
            <h4 class="card-title"><%= vesti.title %></h4>
            <p class="card-text"><%= vesti.description.slice(0,100) %>...</p>
            <a href="vest/<%= vesti.vesti_id %>">
                <button type="button" class="btn btn-primary">
                    Detaljnije
                </button>
            </a>
        </div>
    </div>
    </div>

    <% }) %>
    <% } %>




</div>
<!--End of container -->

<% include footer.ejs %>


<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script type="text/javascript" src="/stylesheets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>
