<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title%></title>

  <!-- Style -->
  <link href="/stylesheets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
  <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
</head>
<body>
<% include header.ejs %>

<!--Carousel-->
<div class="containerindex">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner fill">
      <div class="carousel-item active">
        <img class="d-block w-100" src="/images/vegan.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/images/rene.jpg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/images/pic03.jpg" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<!--Carousel-->

<div class="container">
  <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Rene Vegan</h1>
    <p class="lead">Poznati Nemaƒçku kuvar u Srbiji</p>
  </div>

    <% if (data) { %>
    <% data.forEach(function(vesti){ %>
  <div class="index-card">
    <img class="card-img-top card-fill" src="<%= vesti.img %>" alt="Card image">
    <div class="card-body">
      <h4 class="card-title"><%= vesti.title %></h4>
      <p class="card-text"><%= vesti.description.slice(0, 120) %>...</p>
      <a href="/vest/<%= vesti.vesti_id %>">
        <button class="btn btn-primary">Detaljnije</button>
      </a>
    </div>
  </div>
    <% }) %>
    <% } %>

  <!--Cards-->
</div>
<!--End of container -->

<% include footer.ejs %>

<!--Scripts and bootstrap-->
<script src="/javascripts/index.js"></script>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script type="text/javascript" src="/stylesheets/bootstrap/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/less.js/3.0.0/less.min.js" ></script>
</body>

</html>
