<% include header.ejs %>



<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Uređaji</h1>
    <p class="lead">Detaljnije o našem asortimanu</p>
</div>


<div class="container">



    <% if (data) { %>
    <% data.forEach(function(product){ %>



    <div class="card" style="width:400px">
        <img class="card-img-top fill" src="<%= product.img %>" alt="Card image">
        <div class="card-body">
            <h4 class="card-title"><%= product.title %></h4>
            <p class="card-text">Cena: <%= product.price %> RSD</p>
            <a href="detalji/<%= product.id %>">
                <button type="button" class="btn btn-primary">
                    Detaljnije
                </button>
            </a>
        </div>
    </div>
    <% }) %>
    <% } %>




</div>
<!--End of container -->

